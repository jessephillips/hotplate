%p#notice= notice
%h1 Restaurants
%table
  %thead
    %tr
      %th Name
      %th Address
      %th Website
      %th Phone
      %th Style
      %th{:colspan => "3"}
  %tbody
    - @restaurants.each do |restaurant|
      %tr
        %td= restaurant.name
        %td= restaurant.address
        %td= restaurant.website
        %td= restaurant.phone
        %td= restaurant.style
        %td= link_to 'Show', restaurant
        %td= link_to 'Edit', edit_restaurant_path(restaurant)
        %td= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Restaurant', new_restaurant_path
